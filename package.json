{
  "name": "deckdeals",
  "version": "1.1.1",
  "description": "Price history and deal tracking for Steam Deck store pages, powered by IsThereAnyDeal.",
  "scripts": {
    "build": "shx rm -rf dist && rollup -c",
    "watch": "rollup -c -w",
    "test": "echo \"Error: no test specified\" && exit 1",
    "deploy": "./deploy.sh",
    "archive": "pnpm run build && rm -rf Deckdeals optideck-deckdeals-v$npm_package_version-beta.zip && mkdir -p Deckdeals/dist && cp dist/index.js Deckdeals/dist/ && cp main.py settings.py plugin.json package.json README.md LICENSE Deckdeals/ && zip -r optideck-deckdeals-v$npm_package_version-beta.zip Deckdeals -x \"*.DS_Store\" -x \"__MACOSX/*\" && rm -rf Deckdeals"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/draftdev-sd/optideck-deckdeals.git"
  },
  "keywords": [
    "decky",
    "plugin",
    "steam-deck",
    "deals",
    "price-tracking"
  ],
  "author": "Optideck",
  "license": "BSD-3-Clause",
  "homepage": "https://github.com/draftdev-sd/optideck-deckdeals",
  "devDependencies": {
    "@rollup/plugin-commonjs": "^21.1.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^13.3.0",
    "@rollup/plugin-replace": "^4.0.0",
    "@rollup/plugin-typescript": "^8.3.3",
    "@types/react": "16.14.0",
    "@types/webpack": "^5.28.0",
    "rollup": "^2.77.1",
    "rollup-plugin-import-assets": "^1.1.1",
    "shx": "^0.3.4",
    "tslib": "^2.4.0",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "decky-frontend-lib": "^3.25.0",
    "qrcode.react": "^4.2.0",
    "react-icons": "^4.4.0"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "react",
        "react-dom"
      ]
    }
  }
}